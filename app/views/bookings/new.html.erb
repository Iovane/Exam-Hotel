<!-- app/views/bookings/new.html.erb -->
<div class="container mt-5">
  <h2>New Booking</h2>

  <%= form_with(model: [@room, @booking],class: 'mt-3') do |form| %>


    <div class="mb-3">
      <%= form.label :booking_start, class: 'form-label' %>
      <%= form.date_field :booking_start, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :booking_end, class: 'form-label' %>
      <%= form.date_field :booking_end, class: 'form-control', required: true %>
    </div>


    <%= form.submit 'Create Booking', class: 'btn btn-primary' %>
    <%= link_to "Back to hotel", hotel_path(@room.hotel), class: 'btn btn-secondary' %>

  <% end %>
</div>
