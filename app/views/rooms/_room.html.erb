<div class="container mt-5">
  <%= form_with(model: [@hotel, @room], class: 'mb-4', local: true) do |form| %>
    <div class="form-group flex-d">
      <%= form.label :number %>
      <%= form.text_field :number, class: 'form-control', placeholder: 'Enter room number', required: true %>

      <% if @room.errors.has_key?(:number) %>
        <small class="text-danger"><%= @room.errors[:number].first %></small>
      <% end %>
    </div>

    <div>
      <%= form.label :price %>
      <%= form.number_field :price, class: 'form-control', placeholder: 'Enter room price', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control', placeholder: 'Enter room description', rows: 4, required: true %>
    </div>
    <br>



    <%= form.submit class: 'btn btn-primary' %>
    <%= link_to "Back to hotel", hotel_path(@hotel), class: 'btn btn-secondary' %>

  <% end %>
</div>